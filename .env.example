# GitHub Credentials
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WEBHOOK_SECRET=your_webhook_secret_here

# Anthropic API Key (Shared across all agents)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Orchestrator Mode
# Set to "false" to use webhook mode (requires public URL and GitHub webhook configuration)
# Set to "true" or leave empty to use polling mode (recommended for local development)
USE_POLLING=true

# Polling Settings (only used when USE_POLLING=true)
# How often to check GitHub for new issues/comments/reviews (in seconds)
POLL_INTERVAL_SECONDS=60

# Orchestrator Settings (for webhook mode)
PUBLIC_URL=https://your-domain.com
SERVER_PORT=3000

# Container Settings
MAX_CONCURRENT_CONTAINERS=5
BASE_IMAGE=ghcr-agent:latest

# Optional: Redis for distributed state (future)
# REDIS_URL=redis://localhost:6379
