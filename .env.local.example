# Local Environment Variables
# Copy this file to .env.local for your local development setup
# This file is gitignored and won't be checked in

# GitHub Credentials (override for local testing)
# GITHUB_TOKEN=ghp_your_local_testing_token
# WEBHOOK_SECRET=local_dev_secret_change_me

# Anthropic API Key
# ANTHROPIC_API_KEY=sk-ant-your_local_api_key

# Orchestrator Mode - Force polling for local dev
USE_POLLING=true

# Polling Settings - Faster interval for testing (10 seconds)
POLL_INTERVAL_SECONDS=10

# Orchestrator Settings (for webhook mode - not needed for polling)
# PUBLIC_URL=http://localhost:3000
# SERVER_PORT=3000

# Container Settings - Fewer containers for local testing
MAX_CONCURRENT_CONTAINERS=2
BASE_IMAGE=ghcr-agent:latest
